            link(href="https://unpkg.com/swiper@7/swiper-bundle.min.css",rel='stylesheet')


            link(href="assets/css/style.css",rel='stylesheet')

    block vars
        - var header = true;
        - var footer = true;
        
    body

        block header
            if header
                .header-wrapper
                    header.header
                        .header-left
                            a(href="./")
                                img(src="assets/img/my-logo.png").logo

                            a(href="./").link.link--white
                                span.link__text Abdurrahman Ercan
                            
                        .header-right
                            .header-menu
                                a(href="about.html").header-menu-link About Me
                                a(href="works.html").header-menu-link My Works
                                a(href="kvkk.html").header-menu-link.mobile-link KVKK
                            .header-right-button
                                a(href="contact.html").btn.btn--transparent-white
                                    span.btn__text Contact
                        .header-menu-opener.js-open-menu
                            span
                            span
                            span
                            



        // İçerik Başlangıç
        block content



        // İçerik Bitiş
        


            
        block footer
            
            
            if quickContact
                .quick-contact-wrapper
                    .container
                        .quick-contact
                            h3.title.title--green.title--md What are you working on?
                            p.text.text--white.text--center.mt-2 Let's have a conversation! I'd love to hear about what you're working on and find a way to work
                            a(href="#").btn.btn--green.btn--i-left.fw-600
                                span.btn__icon.icon-font
                                    svg.icon.icon-font
                                        use(xlink:href='assets/icons/icons.svg#icon-message')
                                span.btn__text Chat

            
            if footer
                footer.footer
                    .container 
                        .footer-content 
                            a(href="./")
                                img(src="assets/img/my-logo.png").logo
                            .footer-social 
                                include components/social
                        .footer-copyright 
                            p.text.footer_copyright_text.text--white Developed By Abdurrahman Ercan...
                            .footer-copyright-links 
                                a(href="kvkk.html").footer-copyright-link KVKK
                        
                        
                    
      










        block scripts
            script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
